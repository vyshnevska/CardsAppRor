<h1>Listing cards</h1>

<table>
  <tr>
    <th>Value</th>
    <th>Suit</th>
    <th>Id</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.value %></td>
    <td><%= card.suit %></td>
    <td><%= card.id %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

