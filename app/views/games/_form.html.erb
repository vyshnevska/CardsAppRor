<%= simple_form_for @game do |f| %>
    <%= f.label :name, "Game name" %>
    <%= f.text_field :name %>
    <%= f.fields_for :players do |builder| %>
        <%= render "players_fields", :f => builder %>
    <% end %>
    <p><%= link_to_add_fields "Add Player", f, :players %>
    <%= f.button :submit %>
<%end%>